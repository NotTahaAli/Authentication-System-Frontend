---
interface Props {
	color?: string
}

const { color = 'unset' } = Astro.props;
---

<span>
    <slot />
</span>

<style define:vars={{color}}>
    span {
        width: 100%;
        font-size: 1.5rem;
        color: var(--color);
        text-align: center;
    }
    @media screen and (max-width: 500px) {
        span {
            font-size: 1.2rem;
        }
    }
</style>